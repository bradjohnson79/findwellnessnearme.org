# Neon pooled URL for runtime queries
DATABASE_URL="postgresql://USER:PASSWORD@ep-xxxx-pooler.REGION.aws.neon.tech/DBNAME?sslmode=require"

# Neon direct URL for migrations (used by Prisma CLI; safe to set here too)
DIRECT_URL="postgresql://USER:PASSWORD@ep-xxxx.REGION.aws.neon.tech/DBNAME?sslmode=require"

# Redis (required for Re-verify enqueue in admin)
REDIS_URL="redis://localhost:6379"

# Admin access gate:
# - Browser-friendly: Basic auth (username:password)
ADMIN_BASIC_AUTH="admin:change-me"
#
# - Or send a request header `x-admin-secret: ...`
ADMIN_SECRET="change-me-too"


