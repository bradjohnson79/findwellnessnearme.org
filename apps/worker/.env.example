# Database (Neon pooled is fine for worker runtime)
DATABASE_URL="postgresql://USER:PASSWORD@ep-xxxx-pooler.REGION.aws.neon.tech/DBNAME?sslmode=require"

# Redis for BullMQ
REDIS_URL="redis://localhost:6379"

# Worker identity / politeness
CRAWLER_USER_AGENT="wellnessnearme-bot/0.1 (+https://wellnessnearme.org)"
CRAWL_TIMEOUT_MS="10000"
CRAWL_MAX_PAGES="4"

# Phase 6A/6B maintenance controls
STALE_VERIFICATION_DAYS="180"
REFRESH_INTERVAL_DAYS="30"
MAX_REVERIFY_PER_RUN="200"
MAX_REFRESH_PER_RUN="200"
SUMMARY_REFRESH_LIMIT_PER_RUN="200"
QUALITY_FLAG_LIMIT_PER_RUN="300"

# --- Phase 10: AI review (disabled by default) ---
# AI evaluates ONLY extracted crawl metadata + listing fields (no web browsing).
# It may auto-approve ONLY if all hard checks pass and confidence meets threshold.
AI_REVIEW_ENABLED="0"
AI_REVIEW_PROVIDER="none" # none|openai
AI_REVIEW_MODEL="gpt-4.1-mini"
OPENAI_API_KEY=""

# Auto-approval kill switch (safe default off)
AI_AUTO_APPROVAL_ENABLED="0"
AI_AUTO_APPROVE_MIN_CONFIDENCE="0.90"
AI_REVIEW_MAX_INPUT_CHARS="20000"


